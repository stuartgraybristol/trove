        <vector
            android:name="vector"
            android:width="50dp"
            android:height="50dp"
            android:viewportWidth="81"
            android:viewportHeight="81">
            <path
                android:name="path"
                android:pathData="M 3.48 4.63 L 78.04 76.89"
                android:strokeColor="#6F85E2"
                android:strokeWidth="10"
                android:strokeMiterLimit="10"
                android:fillType="evenOdd"/>
