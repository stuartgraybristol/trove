<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.stucollyn.nfc_play.trove.prototype1UI.LocalStoryGallery">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

    <ImageView
        android:id="@+id/grid_item_background"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:contentDescription="@string/app_name"
        />

    <TextView
        android:id="@+id/grid_item_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/grid_item_background"
        android:layout_alignLeft="@id/grid_item_background"
        android:layout_alignRight="@id/grid_item_background"
        android:layout_alignTop="@id/grid_item_background"
        android:layout_margin="1dp"
        android:background="#55000000"
        android:gravity="center"
        android:layout_gravity="bottom|center"
        android:text=""
        android:textColor="@android:color/white"
        android:textSize="10sp"
        android:textStyle="normal" />

    </FrameLayout>

</android.support.constraint.ConstraintLayout>
