<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.stucollyn.nfc_play.trove.prototype1UI.LoginScreen"
    tools:showIn="@layout/activity_login_screen">

    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:textSize="32dp"
        android:text="Welcome." />

    <TextView
        android:id="@+id/welcome_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcome_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/instruction_text"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/login_button"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginBottom="17dp"
        android:text="Please enter your passcode."
        android:textSize="32dp"
        android:visibility="invisible" />

        <ImageView
        android:id="@+id/miine"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:visibility="visible"
        android:clickable="true"
        android:translationZ="0dp"
        android:src="@drawable/trove_logo"
        tools:layout_editor_absoluteX="132dp"
        tools:layout_editor_absoluteY="273dp" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/instruction_text"
        android:layout_alignStart="@+id/instruction_text"
        android:layout_below="@+id/miine_open"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:onClick="Login"
        android:visibility="visible"
        android:text="\nLogin\n" />

    <Button
        android:id="@+id/logout_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignEnd="@+id/instruction_text"
        android:layout_alignRight="@+id/instruction_text"
        android:layout_below="@+id/miine_open"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:onClick="Logout"
        android:visibility="invisible"
        android:text="\nLogout\n" />

    <Button
        android:id="@+id/signup_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignEnd="@+id/instruction_text"
        android:layout_alignRight="@+id/instruction_text"
        android:layout_below="@+id/miine_open"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:onClick="SignUp"
        android:visibility="invisible"
        android:text="\nSign Up\n" />

    <ImageView
        android:id="@+id/balloon1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="invisible"
        android:src="@drawable/baloon1"
        tools:layout_editor_absoluteX="132dp"
        tools:layout_editor_absoluteY="273dp" />

    <ImageView
        android:id="@+id/balloon2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="invisible"
        android:src="@drawable/baloon2"
        tools:layout_editor_absoluteX="132dp"
        tools:layout_editor_absoluteY="273dp" />

    <ImageView
        android:id="@+id/balloon3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="invisible"
        android:src="@drawable/baloon3"
        tools:layout_editor_absoluteX="132dp"
        tools:layout_editor_absoluteY="273dp" />

    <ImageView
        android:id="@+id/miine_open"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:visibility="invisible"
        android:src="@drawable/trove_logo_open"
        tools:layout_editor_absoluteX="132dp"
        tools:layout_editor_absoluteY="273dp" />

</RelativeLayout>
