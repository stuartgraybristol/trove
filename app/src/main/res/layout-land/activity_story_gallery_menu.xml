<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.stucollyn.nfc_play.trove.prototype1UI.StoryGalleryMenu">

    <ImageButton
        android:id="@+id/local_storage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:onClick="Local"
        android:src="@drawable/local_storage"
        android:text="Local Storage"
        android:translationZ="0dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/cloud_title"
        app:layout_constraintEnd_toStartOf="@+id/cloud_storage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <ImageButton
        android:id="@+id/cloud_storage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:onClick="Cloud"
        android:src="@drawable/cloud_storage"
        android:text="Cloud Storage"
        android:translationZ="0dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/cloud_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/local_storage"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Select a library:"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/local_storage"/>

    <TextView
        android:id="@+id/local_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:gravity="top|center"
        android:text="Local"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/local_storage"
        app:layout_constraintStart_toStartOf="@+id/local_storage"
        app:layout_constraintTop_toBottomOf="@+id/local_storage" />

    <TextView
        android:id="@+id/cloud_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Cloud"
        android:gravity="top|center"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/cloud_storage"
        app:layout_constraintStart_toStartOf="@+id/cloud_storage"
        app:layout_constraintTop_toBottomOf="@+id/cloud_storage" />

</android.support.constraint.ConstraintLayout>
